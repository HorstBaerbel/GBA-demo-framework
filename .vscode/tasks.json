{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run mgba (with gdbserver)",
            "type": "shell",
            "command": "/usr/local/bin/mgba-qt",
            "args": [
                "-2",
                "-g",
                "${command:cmake.launchTargetPath}"
            ],
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        },
        {
            "label": "Analyze map file with AMAP",
            "type": "shell",
            "command": "amap_gtk ${command:cmake.launchTargetDirectory}/*.map",
            "options": {
                "cwd": "${command:cmake.buildDirectory}"
            },
            "problemMatcher": []
        },
        {
            "label": "Analyze map file with fpvgcc (files)",
            "type": "shell",
            "command": "fpvgcc --sar ${command:cmake.launchTargetDirectory}/*.map",
            "options": {
                "cwd": "${command:cmake.buildDirectory}"
            },
            "problemMatcher": []
        },
        {
            "label": "Analyze map file with fpvgcc (symbols)",
            "type": "shell",
            "command": "fpvgcc --ssym all ${command:cmake.launchTargetDirectory}/*.map",
            "options": {
                "cwd": "${command:cmake.buildDirectory}"
            },
            "problemMatcher": []
        }
    ]
}